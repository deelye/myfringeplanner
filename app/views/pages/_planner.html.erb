<div class="plan planner-card <%= planner.planner_clash(@planners, planner) %>">
  <div class="planner-card-show-image">
    <% if @hand %>
      <%= image_tag(planner.performance.show.original_image, :alt => "#{planner.performance.show.artist}", height: planner.duration.to_f/100*1470) %>
      <%= image_tag "arrow-right.png", class: "card-arrow" %>
    <% else %>
      <%= image_tag(planner.performance.show.original_image, :alt => "#{planner.performance.show.artist}") %>
      <div title="Add to Calendar" class="addeventatc">
        <span class="start"><%= planner.date %></span>
        <span class="end"><%= planner.performance.end %></span>
        <span class="timezone">United Kingdom</span>
        <span class="title"><%= planner.performance.show.title %></span>
        <span class="description"><%= planner.performance.show.description %></span>
        <span class="location"><%= planner.performance.show.venue.name %>, <%= planner.performance.show.venue.address %>, <%= planner.performance.show.venue.postcode %></span>
      </div>
    <% end %>
  </div>
  <div class="planner-card-info card-border <%= planner.performance.show.colour_class %> ">
    <h6><%= truncate(planner.performance.show.title, length: 40) %></h6>
    <div>
      <p><%= planner.performance.show.genre %></p>
      <div class="d-flex">
        <p><i class="fas fa-clock fa-fw" aria-hidden="true"></i> <%= planner.performance.time %></p>
      </div>
      <div class="d-flex justify-content-between">
        <p><i class="fas fa-map-marker-alt fa-fw"></i> <%= truncate(planner.performance.show.venue.name, length: 35) %></p>
        <p>Â£<%= planner.performance.price %></p>
      </div>
    </div>
  </div>
</div>
