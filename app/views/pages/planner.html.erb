<!-- Hide form if start date and end date have values -->
<div class="body-container">

  <form action="">
    <label for="start-date"></label>
    <input id="start-date" class="input-field" type="text" placeholder="Start date">
    <label for="end-date"></label>
    <input id="end-date" class="input-field" type="text" placeholder="End date">
