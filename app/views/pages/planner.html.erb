<!-- Hide form if start date and end date have values -->
<div class="body-container">
  <div class="header-bar">
    <form action="">
      <label for="Day"></label>
      <select name="day" id="day">
        <% @collection.each do |r| %>
          <option value="<%= r %>"><%= r %></option>
        <% end %>
      </select>
      <button class="button" type="submit">Go</button>
    </form>
    <h3><%= @dayname %></h3>
  </div>
  <div class="cont">
    <div class="planner">

      <div class="planner-times">
        <p>10:00</p>
        <p>11:00</p>
        <p>12:00</p>
        <p>13:00</p>
        <p>14:00</p>
        <p>15:00</p>
        <p>16:00</p>
        <p>17:00</p>
        <p>18:00</p>
        <p>19:00</p>
        <p>20:00</p>
        <p>21:00</p>
        <p>22:00</p>
        <p>23:00</p>
      </div>

      <div class="day-calendar">
        <% if @planners != false %>
          <% @planners.each do |planner| %>
            <% if planner != false %>
              <%= link_to delete_planner_path(id: planner.id, day: params[:day]), method: :delete do  %>
                <%= render "planner", planner: planner %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="planner-times">
        <p>10:00</p>
        <p>11:00</p>
        <p>12:00</p>
        <p>13:00</p>
        <p>14:00</p>
        <p>15:00</p>
        <p>16:00</p>
        <p>17:00</p>
        <p>18:00</p>
        <p>19:00</p>
        <p>20:00</p>
        <p>21:00</p>
        <p>22:00</p>
        <p>23:00</p>
      </div>

    </div>
    <div class="rhs">
      <% @performances.each do |perf| %>
        <%= link_to performance_planners_path(perf ,@planner, day: params[:day]), method: :post do  %>
          <div class="<%= perf.show.colour_class %> w250">
            <p><%= perf.show.title %></p>
            <p><%= perf.start.strftime('%H:%M') %></p>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>


</div>
