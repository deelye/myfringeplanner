<div class="form-container body-container form-user min-height">
  <h2>Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <div class="form-group form-user-input password required user_password form-left">
        <input class="form-control form-input-box password required string password required special form-user-input" autocomplete="password" autofocus="autofocus" required="required" aria-required="true" placeholder="&#xf023;  New password (<%= @minimum_password_length %> characters minimum)" type="password" name="user[password]" id="user_password">
      </div>
      <div class="form-group form-user-input password required user_password_confirmation">
        <input class="form-control form-input-box password required string password_confirmation required special form-user-input" autocomplete="password_confirmation" autofocus="autofocus" required="required" aria-required="true" placeholder="&#xf023;  Confirm password" type="password" name="user[password_confirmation]" id="user_password_confirmation">
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: "button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
