<div class="container body-container form-user min-height">
  <h3>Log In</h3>

  <div class="form-left">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="form-group form-user-input email required user_email">
          <input class="form-control form-input-box string email required" autocomplete="email" autofocus="autofocus" required="required" aria-required="true" placeholder="&#xf0e0;  Email" type="email" value="" name="user[email]" id="user_email">
        </div>
        <div class="form-group form-user-input password optional user_password">
          <input class="form-control form-input-box password optional" autocomplete="current-password" placeholder="&#xf023;  Password" type="password" name="user[password]" id="user_password">
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Continue", class: "button" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>

