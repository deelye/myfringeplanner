<div class="body-container">
  <h1>Contact Us</h1>

  <%= simple_form_for @contact do |f| %>
    <% if flash[:error].present? %>
        <p> flash[:error]</p>
    <% end %>

    <%= f.label :name %> <br>
    <%= f.input :name, required: true %>

    <br>
    <%= f.label :email %> <br>
    <%= f.input :email, required: true %>

    <br>
    <%= f.label :message %> <br>
    <%= f.text_area :message, as: :text, required: true %>

    <div class="hidden">
      <%= f.label :nickname %> <br>
      <%= f.input :nickname, hint: "" %>
    </div>

    <%= f.button :submit, 'Send Message', class: "button" %>
  <% end %>
</div>
