<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to shows_path do %>
    <%= image_tag "logo.png", class: 'logo'%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="rhs">
    <div class="top">
      <%= link_to "SHOWS", shows_path, class: "big-nav-link" %>
      <%= link_to "SHORTLIST", shortlist_path, class: "big-nav-link" %>
      <%= link_to "PLANNER", planner_path, class: "big-nav-link" %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%# raise %>


<%#= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", width: 40, height: 40, crop: :thumb, gravity: :face %>

              <% if !current_user.photo.nil? %>
                <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png",
                  class: "avatar dropdown-toggle", id: "navbarDropdown",
                  data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
               <%= cl_image_tag current_user.photo.key,
                  class: "avatar dropdown-toggle", id: "navbarDropdown",
                  data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            </li><li class="nav-item dropdown">
              <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png",
                  class: "avatar dropdown-toggle", id: "navbarDropdown",
                  data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>


              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="inline bottom nav-search">
      <%= simple_form_for :filter, url: shows_path, method: :get, class: "form-search d-flex", id: "form-styling" do |f| %>
        <%= f.input :show, label: false, placeholder: "Show...", class: 'search-show-input' %>
        <%= f.input :genre, label: false, collection: Show::GENRES, prompt: "Genre", class: 'genre-style' %>
        <%= f.input :start_date, as: :select, collection: 1..31,
                                 label: false, placeholder: "Start Date",
                                 class: 'search-start-date' %>
        <%= f.input :end_date, as: :select, collection: 1..31, label: false,
                               placeholder: "End Date", class: 'search-end-date' %>
        <%= f.submit value: "Search", class: "submit" %>
      <% end %>
    </div>
  </div>
</div>

