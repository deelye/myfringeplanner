<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="background-image: url(<%= image_path 'nav-back.png' %>);">
  <%= link_to "#" do %>
    <%= image_tag "logo.png", class: 'logo'%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="rhs">
    <div class="top nav-link">
      <%= link_to "SHOWS", shows_path, class: "big-nav-link" %>
      <%= link_to "SHORTLIST", shortlist_path, class: "big-nav-link" %>
      <%= link_to "PLANNER", planner_path, class: "big-nav-link" %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>

            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="inline bottom nav-search">
      <%= simple_form_for :filter, url: shows_path, method: :get, class: "form-search d-flex", id: "form-styling" do |f| %>
        <%= f.input :show, label: false, placeholder: "Show...", input_html: {class: "search-show-input" } %>
        <%= f.input :genre, label: false, collection: Show::GENRES, prompt: "Genre", input_html: {class: "genre-style"} %>
        <%= f.submit "Search", class: "submit" %>
      <% end %>
    </div>
  </div>
</div>

