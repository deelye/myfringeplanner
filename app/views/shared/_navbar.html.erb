<div class="navbar background-blue navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to shows_path do %>
    <%= image_tag "logo.png", class: 'logo'%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="rhs">
    <div class="top">
      <%= link_to "SHOWS", shows_path, class: "big-nav-link" %>
      <%= link_to "SHORTLIST", shortlist_path, class: "big-nav-link" %>
      <%= link_to "PLANNER", planner_path, class: "big-nav-link" %>
      <div class="greeting">
        <p>Hello <%= current_user.first_name %></p>
      </div>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
      <i class="fas fa-bars" id="navbarDropdown" data-toggle="dropdown"></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%if current_user%>
            <%= link_to "My Fringe", planners_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
      </div>
    </div>
    <div class="filter-wrapper">
      <%= simple_form_for :filter, url: shows_path, method: :get, class: "form-search d-flex", id: "form-styling" do |f| %>
        <%= f.input :show, label: false, placeholder: "Find Shows", input_html: {class: 'search-show-input' } %>
        <%= f.input :genre, label: false, collection: Show::GENRES, prompt: "Genre", input_html: {class: 'genre-style' } %>
        <%= f.input :start_date, as: :select, collection: 1..31,
                                 label: false, prompt: "Start",
                                 class: 'search-start-date' %>
        <%= f.input :end_date, as: :select, collection: 1..31, label: false,
                               prompt: "End", input_html: { class: 'search-end-date' } %>
        <%= f.submit value: "Search", class: "submit" %>
      <% end %>
    </div>
  </div>
</div>



