
<div class="container">
    <%= form_tag shows_path, method: :get, class: "form-search d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: 'form-control',
        placeholder: 'Show...'
      %>
      <%= text_field_tag :query,
        params[:query],
        class: 'form-control',
        placeholder: 'Category...'
      %>
      <%= text_field_tag :query,
        params[:query],
        class: 'form-control',
        placeholder: 'Venue...'
      %>
      <%= text_field_tag :query,
        params[:query],
        class: 'form-control',
        placeholder: 'Dates...'
      %>

      <%= submit_tag 'Search', class: 'btn btn-success ml-2 px-3'%>
    <% end %>

    <% @shows.each do |show| %>
      <li><%= show.title %></li>
    <% end %>
</div>


